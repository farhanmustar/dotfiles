{
    "name": "custom-snippets",
    "engines": {
        "vscode": "^1.11.0"
    },
    "contributes": {
        "snippets": [
            {
                "language": "python",
                "path": "./python/base.json"
            },
            {
                "language": ["javascript", "svelte"],
                "path": "./javascript/base.json"
            },
            {
                "language": "lua",
                "path": "./lua/base.json"
            },
            {
                "language": "lua",
                "path": "./lua/vim.json"
            },
            {
                "language": ["svelte"],
                "path": "./svelte/base.json"
            }
        ]
    }
}
