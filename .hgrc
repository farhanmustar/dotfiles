[ui]
editor=vim
ignore=~/.hgignore_global

[extensions]
churn =
histedit = 
#mercurial_keyring = 
strip = 
rebase = 

[tortoisehg]
postpull = update
editor = gedit

[auth]

[alias]
blame = blame --user --number --line-number --ignore-all-space
revertall = revert -all
glog = log --graph
slog = log --template '{rev}:{node|short} {desc|firstline}\n'
latest = log -l 5
